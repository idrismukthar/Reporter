<!DOCTYPE html>
<html lang="en">
<head>
    <title>Control Tower | Admin Dashboard</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        :root {
            --bg-dark: #121212;
            --card-bg: #1e1e1e;
            --primary: #9b30ff;
            --accent: #a7d129;
            --text-main: #ffffff;
            --text-muted: #b0b0b0;
        }
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: var(--bg-dark);
            color: var(--text-main);
            margin: 0;
            padding: 20px;
        }
        .container { max-width: 1200px; margin: 0 auto; }
        
        /* Header */
        .admin-header {
            display: flex; justify-content: space-between; align-items: center;
            padding-bottom: 20px; border-bottom: 1px solid #333; margin-bottom: 30px;
        }
        .logo-area { display: flex; align-items: center; gap: 15px; }
        .logo-area img { height: 50px; }
        .logo-area h1 { font-size: 24px; font-weight: 300; margin: 0; letter-spacing: 2px; }
        .logo-area span { color: var(--accent); font-weight: bold; }
        
        .logout-btn {
            background: rgba(255,255,255,0.1); color: white; text-decoration: none;
            padding: 8px 15px; border-radius: 5px; font-size: 14px; transition: 0.3s;
        }
        .logout-btn:hover { background: #ff4757; }

        /* Filters */
        .filter-bar {
            background: var(--card-bg); padding: 15px; border-radius: 10px;
            display: flex; gap: 15px; margin-bottom: 30px; align-items: center;
        }
        select, button {
            background: #333; color: white; border: 1px solid #444;
            padding: 10px; border-radius: 5px; font-size: 14px;
        }
        button.apply-btn { background: var(--primary); border: none; font-weight: bold; cursor: pointer; }
        
        /* Stats Grid */
        .stats-grid {
            display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px; margin-bottom: 30px;
        }
        .stat-card {
            background: var(--card-bg); padding: 25px; border-radius: 15px;
            text-align: center; border-bottom: 4px solid var(--primary);
        }
        .stat-card h3 { font-size: 36px; margin: 10px 0; color: var(--accent); }
        .stat-card p { color: var(--text-muted); font-size: 14px; text-transform: uppercase; letter-spacing: 1px; }

        /* Charts */
        .charts-row {
            display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 30px;
        }
        .chart-card {
            background: var(--card-bg); padding: 20px; border-radius: 15px; height: 350px;
        }
        h4.card-title { margin-top: 0; margin-bottom: 15px; font-weight: 400; color: var(--text-muted); border-left: 3px solid var(--accent); padding-left: 10px; }

        /* Leaderboard Table */
        .leaderboard-card {
            background: var(--card-bg); padding: 20px; border-radius: 15px;
        }
        table { width: 100%; border-collapse: collapse; margin-top: 15px; }
        th { text-align: left; color: var(--text-muted); font-size: 12px; padding: 10px; border-bottom: 1px solid #444; }
        td { padding: 12px 10px; border-bottom: 1px solid #333; font-size: 14px; }
        tr:hover { background: rgba(255,255,255,0.02); }
        .score-badge { 
            background: rgba(167, 209, 41, 0.2); color: var(--accent); 
            padding: 4px 8px; border-radius: 4px; font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Header -->
        <div class="admin-header">
            <div class="logo-area">
                <img src="/img/tlmps_llogo.png" alt="Logo">
                <h1>CONTROL <span>TOWER</span></h1>
            </div>
            <a href="/logout" class="logout-btn">SECURE LOGOUT</a>
        </div>

        <!-- Filters -->
        <form class="filter-bar" method="GET" action="/admin/dashboard">
            <select name="session">
                <option value="2025_and_2026" <%= session === '2025_and_2026' ? 'selected' : '' %>>Session: 2025/2026</option>
                <option value="2026_and_2027" <%= session === '2026_and_2027' ? 'selected' : '' %>>Session: 2026/2027</option>
            </select>
            <select name="term">
                <option value="First_term" <%= term === 'First_term' ? 'selected' : '' %>>First Term</option>
                <option value="Second_term" <%= term === 'Second_term' ? 'selected' : '' %>>Second Term</option>
                <option value="Third_term" <%= term === 'Third_term' ? 'selected' : '' %>>Third Term</option>
            </select>
            <select name="class">
                <option value="">All Classes</option>
                <option value="JSS1" <%= filterClass === 'JSS1' ? 'selected' : '' %>>JSS 1</option>
                <option value="JSS2" <%= filterClass === 'JSS2' ? 'selected' : '' %>>JSS 2</option>
                <option value="JSS3" <%= filterClass === 'JSS3' ? 'selected' : '' %>>JSS 3</option>
                <option value="SSS1" <%= filterClass === 'SSS1' ? 'selected' : '' %>>SSS 1</option>
                <option value="SSS2" <%= filterClass === 'SSS2' ? 'selected' : '' %>>SSS 2</option>
                <option value="SSS3" <%= filterClass === 'SSS3' ? 'selected' : '' %>>SSS 3</option>
            </select>
            <button type="submit" class="apply-btn">REFRESH DATA</button>
        </form>

        <!-- Key Metrics -->
        <div class="stats-grid">
            <div class="stat-card">
                <p>Total Students Scanned</p>
                <h3><%= stats.totalStudents %></h3>
            </div>
            <div class="stat-card">
                <p>Best Overall Score</p>
                <h3><%= stats.topStudents.length > 0 ? stats.topStudents[0].average.toFixed(2) + '%' : 'N/A' %></h3>
            </div>
            <div class="stat-card">
                <p>Top Performer</p>
                <h3 style="font-size: 20px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                    <%= stats.topStudents.length > 0 ? stats.topStudents[0].name.split(' ')[0] : 'N/A' %>
                </h3>
            </div>
        </div>

        <!-- Analytics Charts -->
        <div class="charts-row">
            <div class="chart-card">
                <h4 class="card-title">Class Performance (Avg Score)</h4>
                <canvas id="classChart"></canvas>
            </div>
            <div class="chart-card">
                <h4 class="card-title">Subject Failure Rates</h4>
                <canvas id="subjectChart"></canvas>
            </div>
        </div>

        <!-- Leaderboard -->
        <div class="leaderboard-card">
            <h4 class="card-title">Top 10 Performers Leaderboard</h4>
            <table>
                <thead>
                    <tr>
                        <th>Rank</th>
                        <th>Student Name</th>
                        <th>Admission No</th>
                        <th>Class</th>
                        <th>Average Score</th>
                    </tr>
                </thead>
                <tbody>
                    <% stats.topStudents.slice(0, 10).forEach((s, index) => { %>
                        <tr>
                            <td>#<%= index + 1 %></td>
                            <td style="color: white; font-weight: bold;"><%= s.name %></td>
                            <td><%= s.admission_no %></td>
                            <td><%= s.class %></td>
                            <td><span class="score-badge"><%= s.average.toFixed(2) %>%</span></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Chart Logic -->
    <script>
        Chart.defaults.color = '#b0b0b0';
        Chart.defaults.borderColor = '#333';

        const stats = <%- JSON.stringify(stats) %>;

        // Class Averages Chart
        const classCtx = document.getElementById('classChart');
        if (Object.keys(stats.classAverages).length > 0) {
            new Chart(classCtx, {
                type: 'bar',
                data: {
                    labels: Object.keys(stats.classAverages),
                    datasets: [{
                        label: 'Average Score',
                        data: Object.values(stats.classAverages),
                        backgroundColor: 'rgba(155, 48, 255, 0.6)',
                        borderColor: '#9b30ff',
                        borderWidth: 1
                    }]
                },
                options: { responsive: true, maintainAspectRatio: false, scales: { y: { beginAtZero: true, max: 100 } } }
            });
        }

        // Subject Failure Rate Chart
        const subCtx = document.getElementById('subjectChart');
        const subjects = Object.keys(stats.subjectStats);
        // Calculate failure rate %
        const failRates = subjects.map(sub => {
            const s = stats.subjectStats[sub];
            return s.total > 0 ? ((s.failed / (s.passed + s.failed)) * 100) : 0;
        });

        // Sort to show highest failure rates first (limit to top 10 worst)
        const combined = subjects.map((s, i) => ({ sub: s, rate: failRates[i] }));
        combined.sort((a, b) => b.rate - a.rate);
        const topBad = combined.slice(0, 10);

        if (topBad.length > 0) {
            new Chart(subCtx, {
                type: 'bar',
                data: {
                    labels: topBad.map(x => x.sub),
                    datasets: [{
                        label: 'Failure Rate (%)',
                        data: topBad.map(x => x.rate),
                        backgroundColor: 'rgba(255, 71, 87, 0.6)',
                        borderColor: '#ff4757',
                        borderWidth: 1
                    }]
                },
                options: { 
                    indexAxis: 'y', // Horizontal bar
                    responsive: true, maintainAspectRatio: false, 
                    scales: { x: { beginAtZero: true, max: 100 } } 
                }
            });
        }
    </script>
</body>
</html>
